
  <div class="card-product">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-product-infos">
    <h1><%= @cocktail.name  %></h1>

    <% @doses.each do |dose| %>
      <p class="description"><%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to '', dose_path(dose), method: :delete, class: "far fa-trash-alt" %>
      </p>
    <% end %>
    <br>
    <%= link_to 'Delete cocktail', @cocktail, method: :delete, class: "btn btn-primary" %>
    <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>
  </div>

