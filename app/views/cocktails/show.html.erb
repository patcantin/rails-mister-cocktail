
  <div class="card-product">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-product-infos">
    <h1><%= @cocktail.name  %></h1>

    <% @doses.each do |dose| %>
      <p class="description"><%= dose.description %> of <%= dose.ingredient.name %>
        <% if user_signed_in? %>
          <%= link_to '', dose_path(dose), method: :delete, class: "far fa-trash-alt" %>
        <% end %>
      </p>
    <% end %>
    <br>
    <% if user_signed_in? %>
      <%= link_to 'Delete cocktail', @cocktail, method: :delete, class: "btn btn-primary btn-sm" %>
      <%= link_to 'Edit ingredients', new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-sm" %>
    <% else %>
      <%= link_to "login to edit cocktail", new_user_session_path, class: "btn btn-primary" %>
    <% end %>

  </div>
  </div>

